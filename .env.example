# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Database Configuration
DB_TYPE=postgresql  # Options: postgresql, sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iban_extraction
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# SQLite (for development)
SQLITE_DB_PATH=./database/iban_extraction.db

# Application Settings
ENV=development  # Options: development, staging, production
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
MAX_CONFIDENCE_THRESHOLD=0.90
MIN_CONFIDENCE_THRESHOLD=0.70
PROCESSING_TIMEOUT=30  # seconds per invoice

# Security Settings
ENCRYPTION_KEY=your_encryption_key_here_32_chars
ALERT_THRESHOLD_PATTERN_CHANGE=0.80

# Azure Storage Configuration (for production)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=iban-extractions

# File Processing
MAX_FILE_SIZE_MB=10
SUPPORTED_FORMATS=pdf,jpg,jpeg,png,tiff
BATCH_SIZE=50

# Dynamics GP Configuration
DYNAMICS_GP_HOST=your_dynamics_gp_host
DYNAMICS_GP_DB=your_dynamics_gp_database
DYNAMICS_GP_USER=your_dynamics_gp_user
DYNAMICS_GP_PASSWORD=your_dynamics_gp_password

# Email Notifications (Optional)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your_email@charteredaccountants.ie
SMTP_PASSWORD=your_email_password
ALERT_EMAIL_TO=kieran.daly@charteredaccountants.ie,eduardo.nascimento@charteredaccountants.ie
